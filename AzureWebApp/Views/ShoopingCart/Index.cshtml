@model List<AzureWebApp.ViewModels.ProductViewModel>
@using (Html.BeginForm())
{

    <table class="table">
        <tr class="btn-secondary">
            <th>
                @Html.DisplayName("Product Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price)
            </th>
        </tr>

        @for (var i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(modelItem => Model[i].ProductId)
            @Html.HiddenFor(modelItem => Model[i].ProductName)
            @Html.HiddenFor(modelItem => Model[i].Price)
            <tr class="btn-light">
                <td>
                    @Html.DisplayFor(modelItem => Model[i].ProductName)
                </td>
                <td>
                    @Html.EditorFor(modelItem => Model[i].Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].Price)
                </td>
            </tr>
        }

    </table>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proceed To CheckOut" class="btn btn-secondary" />
            </div>
        </div>

    </div>
}  